<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Sellers.SellerProductCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/add_new_product"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="26sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/slogan_category">
    <LinearLayout
        android:id="@+id/layout1_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/liniear1_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/cereals"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/cereals"/>
        <TextView
            android:id="@+id/tv_cerels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cereals"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="22sp"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/liniear2_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/pulses"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/pulses"/>
            <TextView
                android:id="@+id/tv_pulses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pulses"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout1_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/liniear3_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/vegetable"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/vegetable"/>
            <TextView
                android:id="@+id/tv_vege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vegetable"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/liniear4_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/fruits"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/fruits"/>
            <TextView
                android:id="@+id/tv_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fruits"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"/>

        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/liniear5_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/layout2_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/others"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/others"/>
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/others"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="22sp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>