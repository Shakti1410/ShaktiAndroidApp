<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="15dp"
    tools:context=".Admin.AdminMaintainProductsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/update_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>
        <EditText
            android:id="@+id/update_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_product_image"
            android:hint="Product Name"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:textSize="18sp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/update_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_product_name"
            android:hint="Product Price"
           android:layout_margin="5dp"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:textSize="18sp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/update_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_product_price"
            android:hint="Product Quantity"
            android:layout_margin="5dp"
            android:inputType="number"
            android:padding="12dp"
            android:textAlignment="center"
            android:background="@drawable/input_design"
            android:textSize="18sp"
            android:textColorHint="@android:color/black"
            />
        <EditText
            android:id="@+id/update_product_Descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_product_quantity"
            android:hint="Product Description"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:background="@drawable/input_design"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColorHint="@android:color/black"
            />
        <Button
            android:id="@+id/update_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_product_Descrip"
            android:text="Update Details"

            android:padding="12dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:background="@drawable/button"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/del_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Delete"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_below="@id/update_product_btn"
            android:layout_marginTop="50dp"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>