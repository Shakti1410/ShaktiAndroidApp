<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/cart_product_nme"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/cart_product_seller"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/cart_product_nme"
            android:layout_marginTop="7dp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:layout_below="@+id/cart_product_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/cart_product_seller_phone"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Quantity"
            android:textAlignment="viewEnd"
            android:visibility="gone"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/cart_product_quantity"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cart_price"
            android:layout_below="@+id/cart_product_seller_phone"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
           />
        <Button
            android:id="@+id/product_feedback"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Product Feedback"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_below="@+id/cart_product_price"
            android:gravity="center"
            android:background="@android:color/white"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>