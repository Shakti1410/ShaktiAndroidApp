<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME AT KISAAN MARKET"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/tv_2">
        <LinearLayout
            android:id="@+id/layout1_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/slogan_category"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/liniear1_category_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/chech_orders_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/check_order"/>
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Order"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/liniear2_category_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/approve_product_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/check_approved"/>
                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved Products"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/layout1_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/liniear3_category_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/update_detail_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/update_product"/>
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Products"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liniear4_category_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/order_his_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/order_history"/>
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order History"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/layout1_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/liniear5_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/layout2_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/buyer_list_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/byer_list"/>
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer Details"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/liniear6_category_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/layout2_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/seller_list_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/seller_list"/>
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sellers Details"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/admin_logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/logout1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"/>

</RelativeLayout>