<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerHomeActivity">

    <TextView
        android:id="@+id/tv_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wel_market"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:textColor="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:background="@drawable/input_design"
        android:layout_below="@id/tv_s">
        <LinearLayout
            android:id="@+id/layout1_horizontal_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/slogan_category"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/liniear1_sel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/check_product_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/check_order"/>
                <TextView
                    android:id="@+id/tv_1_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/al_prod"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/liniear2_sel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/add_product_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/check_approved"/>
                <TextView
                    android:id="@+id/tv_7_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ad_prod"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2_horizontal_sel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/layout1_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/liniear3_sel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/update_sel_prod_btn"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/update_product"/>
                <TextView
                    android:id="@+id/tv_3_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/up_prod"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liniear4_sel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/sel_order_his"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:src="@drawable/order_history"/>
                <TextView
                    android:id="@+id/tv_4_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or_his"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
