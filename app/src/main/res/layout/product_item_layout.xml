<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="15dp">
 <RelativeLayout
     android:id="@+id/rl_v"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >

     <TextView
         android:id="@+id/product_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/productName"
         android:textAlignment="center"
         android:textSize="20sp"
         android:textStyle="bold"
         android:textColor="@android:color/black"
         />
     <ImageView
         android:id="@+id/product_image"
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:layout_below="@id/product_seller_phone"
         android:scaleType="centerCrop"
         android:layout_marginTop="2dp"/>
     <TextView
         android:id="@+id/product_priceItem"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_image"
         android:text="Product Price"
         android:layout_marginTop="5dp"
         android:textAlignment="center"
         android:textSize="18sp"
         android:textColor="@android:color/black"
         />
     <TextView
         android:id="@+id/product_quantityitm"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_priceItem"
         android:text="Product Quantity"
         android:layout_marginTop="5dp"
         android:textAlignment="center"
         android:textSize="18sp"
         android:textColor="@android:color/black"
         />
     <TextView
         android:id="@+id/product_Descrip"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_quantityitm"
         android:text="@string/proDes"
         android:layout_marginTop="5dp"
         android:textAlignment="center"
         android:textSize="16sp"
         android:textColor="@android:color/black"
         />
     <TextView
         android:id="@+id/product_seller_name"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_name"
         android:text="Seller Name"
         android:textStyle="bold"
         android:visibility="gone"
         android:layout_alignParentStart="true"
         android:layout_marginTop="5dp"
         android:textAlignment="viewStart"
         android:textSize="16sp"
         android:textColor="@android:color/black"
         />
     <TextView
         android:id="@+id/product_seller_phone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_name"
         android:layout_alignParentEnd="true"
         android:text="Seller Phone"
         android:visibility="gone"
         android:textAlignment="viewEnd"
         android:layout_marginTop="5dp"
         android:layout_marginRight="5dp"
         android:textStyle="bold"
         android:textSize="16sp"
         android:textColor="@android:color/black"
         />
     <TextView
         android:id="@+id/product_review_btn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/product_Descrip"
         android:layout_alignParentEnd="true"
         android:text="User Review"
         android:textAlignment="viewEnd"
         android:layout_marginTop="5dp"
         android:layout_marginRight="5dp"
         android:textStyle="bold"
         android:textSize="16sp"
         android:textColor="@android:color/black"
         />


 </RelativeLayout>

</androidx.cardview.widget.CardView>