<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/rlay6"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/total_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

    </RelativeLayout>
    <EditText
        android:id="@+id/find_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Phone Number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/rlay6"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/title_ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following Question?"
        android:gravity="center"
        android:layout_below="@+id/find_phone"
        android:textSize="26sp"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name your first School?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/title_ques"
        android:layout_margin="15dp"/>
    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name Your Favorite Cricket Player?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/question_1"
        android:layout_margin="15dp"/>
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_below="@+id/question_2"
        android:layout_margin="15dp"/>

</RelativeLayout>